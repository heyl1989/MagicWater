<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@drawable/settingbg"
    >

    <TextView
        android:id="@+id/tv_appversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/icon"
        android:drawablePadding="10dp"
        android:text="魔幻香水 1.0"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#362439"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="意见反馈"
        android:textSize="16dp"
        android:textColor="#362439"/>
    <TextView
        android:id="@+id/tv_send_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="heyl2804@gmail.com"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_angle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="版本更新"
        android:textSize="16dp"
        android:textColor="#362439"/>
    <TextView
        android:id="@+id/tv_check_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="点击检查新版本"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_angle"/>


</LinearLayout>
